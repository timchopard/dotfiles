syntax enable
colorscheme gruvbox
set background=dark

" Set smart search (only case sensitive if incl. upper case)
set ignorecase
set smartcase

" Set line numbers
set number relativenumber

" Always show status bar 
set laststatus=2

set tabstop=4 shiftwidth=4

set expandtab

set colorcolumn=80

set noerrorbells visualbell t_vb=

